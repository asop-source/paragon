<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_rejected_stock_wizard_form" model="ir.ui.view">
            <field name="name">rejected.stock.wizard.form</field>
            <field name="model">rejected.stock.wizard</field>
            <field name="arch" type="xml">
                <form string="Reason">
                    <group>
                        <group>
                            <field name="description" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_generate" string="Reject" type="object" class="oe_highlight"/>
                        <button string="Discard" class="btn btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>